---
type BreadcrumbItem = { label: string; href: string };
const { items = [] } = Astro.props as { items: BreadcrumbItem[] };
---
<nav aria-label="Breadcrumb" style="margin-top: 1em;">
  {items.map((item, idx) => (
    <>
      <a href={item.href}>{item.label}</a>
      {idx < items.length - 1 && ' > '}
    </>
  ))}
</nav> 