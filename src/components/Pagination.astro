import type { Page } from 'astro';

interface Props {
  page: Page<any>; // Accept any type of content
}

const { page } = Astro.props;

<nav aria-label="Pagination">
  <div class="pagination-links">
    {page.url.prev ? (
      <a href={page.url.prev} class="prev-link" aria-label="Previous page">
        &larr; Previous
      </a>
    ) : (
      <span class="disabled-link" aria-hidden="true">&larr; Previous</span>
    )}
    <span class="page-info">
      Page {page.currentPage} of {page.totalPages}
    </span>
    {page.url.next ? (
      <a href={page.url.next} class="next-link" aria-label="Next page">
        Next &rarr;
      </a>
    ) : (
      <span class="disabled-link" aria-hidden="true">Next &rarr;</span>
    )}
  </div>
</nav>

<style>
  .pagination-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .prev-link,
  .next-link,
  .disabled-link {
    padding: 0.5rem 1rem;
