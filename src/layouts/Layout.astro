import { siteMetadata } from '../utils/siteMetadata';

---
interface Props {
	title: string;
  // Optional props for next/prev navigation removed
  // contentType?: 'blog' | 'concepts'; 
  // prev?: { slug: string; title: string } | null;
  // next?: { slug: string; title: string } | null;
}

// Removed contentType, prev, next from props destructuring
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={siteMetadata.description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/platforms">Platforms</a>
        <a href="/tutorials">Tutorials</a>
        <a href="/concepts">Concepts</a>
        <a href="/timeline">Timeline</a>
        <a href="/blog">Blog</a>
        <a href="/about">About</a>
      </nav>
    </header>
		<main>
			<slot />

      {/* Removed conditional Next/Previous Navigation */}
      {/* 
      {(prev || next) && contentType && (
        <nav class="post-navigation">
          ...
        </nav>
      )} 
      */}
		</main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Code 198x. All rights reserved.</p>
    </footer>
	</body>
</html>
<style is:global>
	/* Add some basic global styles */
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
    color: #fff;
	}
	body {
		margin: auto;
		padding: 2rem;
		max-width: 80ch;
	}
  header nav {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #444;
  }
  header nav a {
    color: #eee;
    text-decoration: none;
  }
   header nav a:hover {
    color: #fff;
    text-decoration: underline;
  }
  footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid #444;
    font-size: 0.9em;
    color: #aaa;
  }
  a {
    color: #9bf;
  }
  a:hover {
    color: #adf;
  }

  /* Removed post-navigation styles from global, as they are now in specific layouts */
  /*
  .post-navigation {
     ...
  }
  */
</style> 