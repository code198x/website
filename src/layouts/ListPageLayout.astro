---
// src/layouts/ListPageLayout.astro
// Layout for pages that list content collection entries
import Layout from './Layout.astro';
import type { CollectionEntry } from 'astro:content';

// Define a generic type for the items array
type Item = CollectionEntry<any>; // Or define a more specific base type if needed

interface Props {
  title: string;
  description?: string; // Optional description for the list page
  items: Item[]; // Array of collection entries
}

const { title, description, items } = Astro.props;
---
<Layout title={title}>
  <h1>{title}</h1>
  {description && <p>{description}</p>}

  {/* Maybe add filtering/sorting controls here later */}
  
  <ul>
    {items.map(item => (
      <li>
        {/* 
          Pass the current item to the named slot. 
          The page using this layout will define the content for this slot.
        */}
        <slot name="list-item" item={item} />
      </li>
    ))}
  </ul>
</Layout>

<style>
  /* Add styles for the list page layout */
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  li {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px dashed var(--color-border-muted, #555); /* Example style */
  }
  li:last-child {
    border-bottom: none;
  }
  h1 + p {
    margin-bottom: 2rem; /* Space below description */
  }

  /* Styles within the slot will be defined by the consuming page or its components */
</style> 