---
import BaseLayout from "./BaseLayout.astro";
const { title, system, systemName, tierNumber, summary } = Astro.props;
---
<BaseLayout title={title}>
  <nav style="margin-bottom: 1em;">
    <a href="/systems">Systems</a> &gt;
    <a href={`/lessons/${system}`}>{systemName}</a> &gt;
    <a href={`/lessons/${system}/tier-${tierNumber}`}>Tier {tierNumber}</a>
  </nav>
  <article>
    <p><strong>System:</strong> {systemName} &nbsp; <strong>Tier:</strong> {tierNumber}</p>
    {summary && <p><em>{summary}</em></p>}
    <slot />
  </article>
</BaseLayout> 